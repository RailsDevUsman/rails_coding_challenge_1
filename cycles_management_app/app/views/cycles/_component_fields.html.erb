<div class="mb-3 row component_fields">
	<div class="col-sm-2">
  		<%= f.label :name %>
  	</div>
  	<div class="col-sm-4">
  		<%= f.text_field :name, class: 'component_name' %>
  	</div>
  	<%= f.hidden_field :_destroy, class: "destroy_field" %>
  	<div class="col-sm-1">
  		<%= link_to "remove", 'javascript:void(0);', class: "remove_fields" %>
  	</div>
</div>